<body>

    <div class="container bg-white">

        <a href="index.html"><img src="./../resourcesFiles/Frame 124 (1).png" class="img-fluid d-block mx-auto"></a>


        <div class="sub-container" id="sub-container">

            <h5 class="">Reset Password</h5>

            <p id="errorMessage" class="text-center"><img src="./../resourcesFiles/Vector (5).png" class="img-fluid"
                    id="mark">
            </p>
            <form action="/Healtify/forgotpassword" method="post" id="form">
                <fieldset>
                    <label for="email" class="form-label"></label>
                    <input type="email" id="email" class="form-control mx-auto" placeholder="Enter Email" name="email"
                        value="">
                </fieldset>
                <button onclick="formValidation()" type="submit" class="d-block mx-auto" id="button">Reset
                    password</button>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('form').addEventListener('submit', async function (event) {
            event.preventDefault(); // Prevent form from submitting the default way
            console.log('hello')
            const email = document.getElementById('email').value; // Get the email input

            console.log(email)
           
    
            if (!email) {
                document.getElementById('errorMessage').textContent = 'Please enter a valid email address.';
                return;
            }
    
            try {
                const response = await fetch('/Healtify/resetpassword', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email }), // Send the email as JSON
                });
                console.log(response)
    
                if (response.ok) {
                    const result = await response.json();
                    console.log(result);
                    // window.location.href = '/Healtify/dashboard'; // Redirect on success
                } else {
                    const result = await response.json();
                    // document.getElementById('errorMessage').textContent = result.message || 'An error occurred.';
                    console.log(result);
                }
            } catch (error) {
                console.log(error);
                // document.getElementById('errorMessage').textContent = 'An error occurred. Please try again.';
            }
        });
    </script>
    
